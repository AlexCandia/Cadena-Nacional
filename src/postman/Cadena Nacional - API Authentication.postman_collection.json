				{
					"name": "Login - Iniciar Sesión",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "/*{\n  \"email\": \"estudiante2@example.com\",\n  \"password\": \"Password123!\"\n}*/\n/*{\n  \"email\": \"profesor@example.com\",\n  \"password\": \"abcde123!\" \n}*/\n{\n  \"email\": \"administrador@cadenanacional.com\",\n  \"password\": \"fghijk123!\" \n}"
